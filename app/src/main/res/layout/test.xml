<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bottom_sheet_background"
    tools:context=".TestActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/vendor_profile"
        android:textSize="18sp"
        android:textStyle="bold"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="10dp"
        android:background="@color/black"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/detailImage"
            android:scaleType="fitCenter"
            android:src="@drawable/ironing" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:id="@+id/detailTitle"
                android:text="Papa laundry Services"
                android:textStyle="bold"
                android:textSize="20sp" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/detailDesc"
                android:text="laundry services"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/phone_view"
                android:text="Contact"/>


        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/round_background"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp">



            <ImageView
                android:id="@+id/image_location"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_marginTop="6dp"
                android:src="@drawable/baseline_location_on_24" />

            <TextView
                android:id="@+id/detailLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/image_location"
                android:text="Langas Kona Mbaya (1.3 km)"
                android:textColor="@color/black"
                android:textSize="16sp"
                tools:ignore="SmallSp" />

            <RatingBar
                android:id="@+id/rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailLocation"
                android:layout_marginTop="5dp"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="5"
                android:stepSize="0.1" />

            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:background="@drawable/round_background"
                android:elevation="10dp"
                android:src="@drawable/baseline_favorite_border_24" />

            <TextView
                android:id="@+id/text_periode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rating"
                android:layout_marginTop="15dp"
                android:textStyle="bold"
                android:text="Work Period"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_periode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_periode"
                android:scrollbars="horizontal"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:text="Weekly"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/colorAccent" />

                <com.google.android.material.chip.Chip
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:text="Biweekly"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:text="Monthly"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>

            <TextView
                android:id="@+id/text_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/chip_group_periode"
                android:layout_marginTop="15dp"
                android:text="Work Time"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_time"
                android:scrollbars="horizontal"
                app:singleLine="true">

                <com.google.android.material.chip.Chip
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:text="07:00"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp" />

                <com.google.android.material.chip.Chip
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:text="10:00"
                    android:textAlignment="center"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/colorAccent" />

                <com.google.android.material.chip.Chip
                    android:layout_width="100dp"
                    android:layout_height="60dp"
                    android:text="14:00"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    app:chipBackgroundColor="@color/white"
                    app:chipStrokeColor="@color/black"
                    app:chipStrokeWidth="1dp" />

            </com.google.android.material.chip.ChipGroup>

            <ImageButton
                android:id="@+id/button_phone"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:background="@drawable/round_background"
                android:src="@drawable/baseline_call_24" />

            <ImageButton
                android:id="@+id/button_chat"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/button_phone"
                android:background="@drawable/round_background"
                android:src="@drawable/baseline_message_24" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:background="@drawable/splash_background"
                android:paddingStart="30dp"
                android:paddingEnd="30dp"
                android:text="Make Appointment"
                android:textAllCaps="false"
                android:textStyle="bold" />
        </RelativeLayout>
    </LinearLayout>



    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/round_background"
        android:elevation="10dp"
        android:src="@drawable/baseline_arrow_back_24" />


</LinearLayout>